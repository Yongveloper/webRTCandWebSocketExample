doctype html
html(lang="ko")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Example
        link(link rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header
            h1 Room 
        main
            div#welcome
                form
                    input(placeholder="room name", required, type="text")
                    button Enter room
            div#call
                div#myStream
                    video#myFace(autoplay, palysinline, width="400", height="400")
                    button#mute Mute
                    button#camera Turn Camera Off
                    button#mirror Mirror Mode Off
                    select#cameras
                        option Camera
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js")